<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150sp"
        android:layout_height="150dp"
        android:id="@+id/fragmentImageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="15sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="42sp"
        android:text="Name"
        android:layout_margin="15sp"
        android:layout_below="@+id/fragmentImageView"
        android:id="@+id/fragmentName"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:text="Message"
        android:layout_below="@+id/fragmentName"
        android:padding="15sp"
        android:id="@+id/fragmentMessage"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragmentMessage"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/fragmentFacebook"
            android:layout_gravity="center"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/fragmentInstagram"
            android:layout_gravity="center"
            />

    </LinearLayout>
</RelativeLayout>