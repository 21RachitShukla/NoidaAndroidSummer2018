<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    android:background="@drawable/pokego">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/seted"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="40sp"
            android:text="*POKEINFO*"
            android:textStyle="bold|italic"
            android:textColor="#f20606"
            android:layout_marginLeft="2dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here's your poke's info!!"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textSize="24dp"
            android:textStyle="bold|italic"
            android:fontFamily="serif"
            android:id="@+id/here"
            android:textColor="#0d00ff"/>
        <TextView
            android:id="@+id/nameid"

            android:layout_marginTop="12dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvWeight"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvHeight"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBaseExper"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAbility1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAbility2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#000000"
            android:textSize="28sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold" />




    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.4"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ash"
            android:alpha="0.6"/>

    </LinearLayout>








</LinearLayout>